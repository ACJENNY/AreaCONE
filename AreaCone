    private void jButtonExecutarActionPerformed(java.awt.event.ActionEvent evt) {                                                
        // TODO add your handling code here:
        try {
            Cone pino = new Cone();
            pino.setRaio(Float.parseFloat(jTextFieldRaio.getText()));
            pino.setAltura(Float.parseFloat(jTextFieldAltura.getText()));
            
            String saida = "DADOS DO CONE - PINO \n";
            saida += "Raio: " + pino.getRaio() + "n";
            saida += "Altura: " + pino.getAltura() + "\n";
            saida += "Geratriz: " + pino.calcularGeratriz() + "\n";
            saida += "Area Lateral: " + pino.calcularAreaLateral() + "\n";
            saida += "Area Total: " + pino.calcularAreaTotal() + "\n";
            saida += "Volume: " + pino.calcularVolume() + "\n";
          jTextAreaSaida.setText(saida); 
          jTextFieldRaio.setText("");
          jTextFieldAltura.setText("");
        } catch (Exception erro) {
            JOptionPane.showMessageDialog(this, erro.getMessage());
        }
    }                                               

